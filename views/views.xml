<odoo>
  <data>
    <!-- Inherit Form View to Modify it -->
    <record id="so_print_currency.sale_order_form" model="ir.ui.view">
        <field name="name">so.print.currency.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="moneda_adic"/>
                <field name="tasa_cambio"/>
                <field name="subtotal_moneda_local" sum="SubTotal Moneda Local" widget="monetary" invisible="1"/>
            </xpath>


        </field>
    </record>

      <record id="so_print_currency.view_quotation_tree" model="ir.ui.view">
          <field name="name">so.print.currency.view.quotation.tree</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_quotation_tree"/>
          <field name="arch" type="xml">

              <xpath expr="//field[@name='field']" position="after">
                  <field name="subtotal_moneda_local" sum="SubTotal Moneda Local" widget="monetary"/>
              </xpath>

          </field>
      </record>

  </data>
</odoo>